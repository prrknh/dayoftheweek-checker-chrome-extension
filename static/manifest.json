{
  "name": "DayOfTheWeekChecker",
  "description": "Check day of the week",
  "version": "1.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "icons/default.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions":[
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "background":{
    "scripts":[
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contents.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
